<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="20dp"
    tools:context=".SearchBusStopItemFragment">

    <TextView
        android:id="@+id/busStopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:text="서대전역 입구" />

    <TextView
        android:id="@+id/busStopId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/busStopName"
        android:layout_marginTop="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/colorPrimary"

        android:text="21640" />

    <TextView
        android:id="@+id/busStopLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/busStopName"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/busStopId"
        android:text="쌍용예가아파트 방면" />

</RelativeLayout>